<svg width="1200" height="600" viewBox="0 0 1200 600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="heroGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#007bff;stop-opacity:0.8" />
      <stop offset="50%" style="stop-color:#0056b3;stop-opacity:0.6" />
      <stop offset="100%" style="stop-color:#003d82;stop-opacity:0.9" />
    </linearGradient>
    <pattern id="heroPattern" patternUnits="userSpaceOnUse" width="40" height="40">
      <circle cx="20" cy="20" r="2" fill="white" opacity="0.1"/>
    </pattern>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="600" fill="url(#heroGradient)"/>
  <rect width="1200" height="600" fill="url(#heroPattern)"/>
  
  <!-- Justice Symbol -->
  <g transform="translate(600, 300)">
    <!-- Scale Base -->
    <rect x="-3" y="80" width="6" height="120" fill="white" opacity="0.3"/>
    <circle cx="0" cy="200" r="20" fill="white" opacity="0.3"/>
    
    <!-- Scale Beam -->
    <rect x="-120" y="-3" width="240" height="6" fill="white" opacity="0.4"/>
    
    <!-- Left Scale -->
    <g transform="translate(-80, 0)">
      <path d="M-20 0 Q-20 20 0 20 Q20 20 20 0 Z" fill="white" opacity="0.3"/>
      <line x1="-20" y1="0" x2="-20" y2="-30" stroke="white" stroke-width="2" opacity="0.4"/>
      <line x1="20" y1="0" x2="20" y2="-30" stroke="white" stroke-width="2" opacity="0.4"/>
      <line x1="-20" y1="-30" x2="20" y2="-30" stroke="white" stroke-width="2" opacity="0.4"/>
    </g>
    
    <!-- Right Scale -->
    <g transform="translate(80, 0)">
      <path d="M-20 0 Q-20 20 0 20 Q20 20 20 0 Z" fill="white" opacity="0.3"/>
      <line x1="-20" y1="0" x2="-20" y2="-30" stroke="white" stroke-width="2" opacity="0.4"/>
      <line x1="20" y1="0" x2="20" y2="-30" stroke="white" stroke-width="2" opacity="0.4"/>
      <line x1="-20" y1="-30" x2="20" y2="-30" stroke="white" stroke-width="2" opacity="0.4"/>
    </g>
  </g>
  
  <!-- Decorative Elements -->
  <circle cx="200" cy="150" r="3" fill="white" opacity="0.2"/>
  <circle cx="1000" cy="200" r="4" fill="white" opacity="0.15"/>
  <circle cx="150" cy="450" r="2" fill="white" opacity="0.25"/>
  <circle cx="1050" cy="400" r="3" fill="white" opacity="0.2"/>
  
  <!-- Text Overlay Area -->
  <rect x="100" y="450" width="400" height="100" fill="rgba(0,0,0,0.3)" rx="10"/>
  <text x="120" y="480" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="white">
    Justice for All
  </text>
  <text x="120" y="510" font-family="Arial, sans-serif" font-size="16" fill="white" opacity="0.9">
    Protecting Human Rights and Dignity
  </text>
</svg>