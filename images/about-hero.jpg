<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 400" width="1200" height="400">
  <defs>
    <linearGradient id="aboutGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#059669;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#10b981;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#34d399;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="400" fill="url(#aboutGradient)"/>
  
  <!-- People silhouettes -->
  <g fill="#ffffff" opacity="0.7">
    <!-- Person 1 -->
    <g transform="translate(300,200)">
      <circle cx="0" cy="-60" r="30"/>
      <rect x="-25" y="-30" width="50" height="80" rx="25"/>
      <rect x="-15" y="50" width="12" height="60"/>
      <rect x="3" y="50" width="12" height="60"/>
    </g>
    
    <!-- Person 2 -->
    <g transform="translate(500,200)">
      <circle cx="0" cy="-60" r="30"/>
      <rect x="-25" y="-30" width="50" height="80" rx="25"/>
      <rect x="-15" y="50" width="12" height="60"/>
      <rect x="3" y="50" width="12" height="60"/>
    </g>
    
    <!-- Person 3 -->
    <g transform="translate(700,200)">
      <circle cx="0" cy="-60" r="30"/>
      <rect x="-25" y="-30" width="50" height="80" rx="25"/>
      <rect x="-15" y="50" width="12" height="60"/>
      <rect x="3" y="50" width="12" height="60"/>
    </g>
    
    <!-- Person 4 -->
    <g transform="translate(900,200)">
      <circle cx="0" cy="-60" r="30"/>
      <rect x="-25" y="-30" width="50" height="80" rx="25"/>
      <rect x="-15" y="50" width="12" height="60"/>
      <rect x="3" y="50" width="12" height="60"/>
    </g>
  </g>
  
  <!-- Connecting hands -->
  <g stroke="#ffffff" stroke-width="8" fill="none" opacity="0.6">
    <path d="M325,170 Q375,150 425,170"/>
    <path d="M525,170 Q575,150 625,170"/>
    <path d="M725,170 Q775,150 825,170"/>
  </g>
  
  <!-- Text -->
  <text x="600" y="80" text-anchor="middle" font-family="Arial, sans-serif" font-size="42" font-weight="bold" fill="#ffffff">
    About Us
  </text>
  <text x="600" y="120" text-anchor="middle" font-family="Arial, sans-serif" font-size="20" fill="#ffffff" opacity="0.9">
    United for Human Rights and Social Justice
  </text>
</svg>